<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChangePasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand"
            android:textStyle="bold"/>

        <EditText
            android:layout_gravity="center_horizontal"
            android:background="@drawable/settingsedittext"
            android:padding="10dp"
            android:id="@+id/currentPasswordEditText"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Current Password"
            android:layout_marginTop="50dp"
            android:inputType="textPassword"
            android:fontFamily="@font/quicksand"
            android:textStyle="bold"/>

        <EditText
            android:layout_gravity="center_horizontal"
            android:background="@drawable/settingsedittext"
            android:padding="10dp"
            android:id="@+id/newPasswordEditText"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="New Password"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:fontFamily="@font/quicksand"
            android:textStyle="bold"/>

        <EditText
            android:layout_gravity="center_horizontal"
            android:background="@drawable/settingsedittext"
            android:padding="10dp"
            android:id="@+id/newPasswordConfirmEditText"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="New Password Confirmation"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:fontFamily="@font/quicksand"
            android:textStyle="bold"
            app:cornerRadius="40dp"
            />

        <Button
            android:id="@+id/changePasswordButton"
            android:layout_width="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:backgroundTint="#FFFDD0"
            android:fontFamily="@font/quicksand"
            android:letterSpacing="0.15"/>

        <Button
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:textColor="@color/white"
            android:backgroundTint="#AFAFAF"
            android:fontFamily="@font/quicksand"
            android:letterSpacing="0.15"
            android:id="@+id/returnButtonChangePassword"
            android:layout_height="wrap_content"
            android:text="Return To Settings"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            app:cornerRadius="40dp"/>
    </LinearLayout>

</FrameLayout>