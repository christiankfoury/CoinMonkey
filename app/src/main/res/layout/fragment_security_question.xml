<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecurityQuestionFragment"
    android:background="#E6B99F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/securityQuestionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security Question"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#964B00"/>

        <EditText
            android:id="@+id/securityAnswerEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Security Answer"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/textviewborder"/>
        
        <Button
            android:id="@+id/submitSecurityAnswerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFFDD0"
            android:fontFamily="@font/quicksand"/>

        <Button
            android:id="@+id/cancelSecurityAnswerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FF0000"
            android:fontFamily="@font/quicksand"/>
    </LinearLayout>

</FrameLayout>